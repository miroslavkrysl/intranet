{% import 'macros/form.twig' as form %}

<table class="table table-striped table-hover table-bordered">
    <thead>
    <tr>
        <th scope="col">{{ _text('fields.name')|capitalize }}</th>
        <th scope="col">{{ _text('fields.description')|capitalize }}</th>
        <th scope="col">{{ _text('fields.manufacturer')|capitalize }}</th>
        <th scope="col">{{ _text('fields.model')|capitalize }}</th>
    </tr>
    </thead>
    <tbody>

    {%  for car in cars %}

        <tr data-toggle="modal" data-target="#car-settings-modal">
            <td data-field="name">{{ car.name }}</td>
            <td data-field="description">{{ car.description }}</td>
            <td data-field="manufacturer">{{ car.manufacturer }}</td>
            <td data-field="model">{{ car.model }}</td>
        </tr>

    {% endfor %}

    </tbody>
</table>